{
  "dxt_version": "0.1",
  "name": "my-fs-mcp",
  "version": "1.0.0",
  "description": "A DXT extension to access the filesystem from claude",
  "author": {
    "name": "Francisco Perez-Sorrosal"
  },
  "server": {
    "type": "python",
    "entry_point": "server/main.py",
    "mcp_config": {
      "command": "/Users/fperez/.pyenv/shims/python",
      "args": [
        "${__dirname}/server/main.py",
        "--workspace=${user_config.workspace_directory}"
      ],
      "env": {
        "DEBUG": "${user_config.debug}",
        "PYTHONPATH": "${__dirname}/server/lib",
        "HOME": "/Users/fperez"
      }
    }
  },
  "tools": [
    {
      "name": "list_workspaces",
      "description": "Returns the list of directories (workspaces) that this server is allowed to access."
    },
    {
      "name": "ls",
      "description": "List files in a directory with metadata"
    },
    {
      "name": "mkdir",
      "description": "Create a directory at the given path. If overwrite is True, remove and recreate if it exists. Safety: disallows absolute paths and parent-relative paths"
    },
    {
      "name": "file_info",
      "description": "Get meta-information of a file or directory"
    }    
  ],  
  "keywords": [
    "python",
    "management",
    "filesystem",
    "file",
    "directory"
  ],  
  "license": "MIT",
  "user_config": {
    "workspace_directory": {
      "type": "directory",
      "title": "Workspace Directory",
      "description": "Directory to use as workspace",
      "default": "${HOME}/Bonkers",
      "required": false
    },
    "debug": {
      "type": "boolean",
      "title": "Debug Mode",
      "description": "Enable debug output",
      "default": false,
      "required": false
    }
  },
  "compatibility": {
    "claude_desktop": ">=0.10.0",
    "platforms": [
      "darwin",
      "win32",
      "linux"
    ],
    "runtimes": {
      "python": ">=3.11.0 <4"
    }
  }
}
